<%= turbo_stream_from 'quotes' %>
<main class='container'>
  <div class='header'>
    <h1>Quotes</h1>
    <%# turbo_frame: dom_id(Quote.new) is to generate new quote id %>
    <%= link_to 'New quote', new_quote_path, class: 'btn btn--primary', data: { turbo_frame: dom_id(Quote.new) } %>
  </div>

  <%# Shows a input form to add new quotes %>
  <%= turbo_frame_tag Quote.new %>

  <%= turbo_frame_tag 'quotes' do %>
    <%= render @quotes %>
  <% end %>
</main>
